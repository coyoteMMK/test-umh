// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---
<footer>
  <div class="container">
    <p>&copy; {currentYear} Repositorio de Tests UMH. Todos los derechos reservados.</p>
    <p>Hecho con <a href="https://astro.build/" target="_blank" rel="noopener noreferrer">Astro</a> ðŸš€</p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--footer-bg-color, #34495e); /* Slightly lighter dark blue-gray, fallback */
    color: var(--footer-text-color, #bdc3c7); /* Medium gray, fallback */
    padding: 2rem 0;
    border-top: 3px solid var(--accent-color, #f39c12); /* Orange accent, fallback */
    text-align: center;
    font-size: 0.9rem;
  }

  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  footer p {
    margin: 0.5rem 0;
  }

  footer a {
    color: var(--accent-color-light, #f1c40f); /* Lighter orange for links, fallback */
    text-decoration: none;
    transition: color 0.3s ease;
  }

  footer a:hover,
  footer a:focus {
    color: var(--accent-color, #f39c12);
    text-decoration: underline;
  }
</style>
