---
// src/components/Header.astro
const { title } = Astro.props;
---
<header>
  <div class="container">
    <h1>ðŸ§ª {title}</h1>
    <nav>
      <a href="/">Inicio</a>
      <!-- Add other navigation links here if needed -->
    </nav>
  </div>
</header>

<style>
  header {
    background-color: var(--header-bg-color, #2c3e50); /* Dark blue-gray, fallback */
    color: var(--header-text-color, #ecf0f1); /* Light gray, fallback */
    padding: 1.5rem 0;
    border-bottom: 3px solid var(--accent-color, #f39c12); /* Orange accent, fallback */
  }

  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  h1 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: bold;
  }

  nav a {
    color: var(--header-text-color, #ecf0f1);
    text-decoration: none;
    margin-left: 1.5rem;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  nav a:hover,
  nav a:focus {
    color: var(--accent-color, #f39c12);
    text-decoration: underline;
  }

  /* Mobile adjustments */
  @media (max-width: 600px) {
    .container {
      flex-direction: column;
      align-items: flex-start;
    }
    h1 {
      margin-bottom: 0.5rem;
    }
    nav {
      margin-top: 0.5rem;
    }
    nav a {
      margin-left: 0;
      margin-right: 1rem; /* Spacing for mobile nav links */
    }
  }
</style>
